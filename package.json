{
  "name": "lattice",
  "version": "0.1.0",
  "private": true,
  "description": "CLI-first monorepo for Lattice generator",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "test": "npm run test --workspaces",
    "clean": "npm run clean --workspaces && rimraf node_modules",
    "harness": "npm run build --workspace=@lattice/engine && npm run build --workspace=@lattice/harness && npm run run --workspace=@lattice/harness"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

